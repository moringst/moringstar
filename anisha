    <script>
        function showSurprise() {
            // Show the popup with a surprise message
            const popup = document.getElementById('popupMessage');
            popup.style.display = 'flex';
        }

        function closePopup() {
            const popup = document.getElementById('popupMessage');
            popup.style.display = 'none';
        }

        function answerYes() {
            const answerText = document.getElementById('answerText');
            answerText.textContent = "Walk by again, but I‚Äôm already falling for you! üòç";
            answerText.classList.add('answer-yes');
        }

        function answerNo() {
            const answerText = document.getElementById('answerText');
            answerText.textContent = "No worries, I‚Äôm sure you‚Äôll fall for me eventually! üòâ";
            answerText.classList.add('answer-no');
        }
